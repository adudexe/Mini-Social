{
  "compilerOptions": {
    "target": "ES2020",                    // Modern JS target
    "module": "commonjs",                  // For Node.js
    "outDir": "./dist",                    // Output compiled JS here
    "rootDir": "./src",                    // Your TS source code
    "strict": true,                        // Enable all strict type-checking
    "esModuleInterop": true,               // Allow default imports from CommonJS
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,             // Allow importing JSON files
    "moduleResolution": "node",            // Helps resolve node_modules
    "allowJs": false                       // Optional: block .js files if you want TS only
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
